<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhun.buyfromus.PhoneNumber"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="Please enter your phone number to proceed the purchase"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="300dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="80dp"
        android:layout_above="@+id/p_n_phonenumber_input"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/p_n_phonenumber_input"
        android:layout_width="wrap_content"
        android:hint="Enter Your Phone Number"
        android:textColorHint="@android:color/white"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteY="243dp"
        tools:layout_editor_absoluteX="85dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/p_n_confirm_btn"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submit"
        android:text="Back"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="369dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/p_n_phonenumber_input"
        android:layout_alignEnd="@+id/p_n_phonenumber_input" />

    <Button
        android:id="@+id/p_n_cancel_btn"
        android:layout_width="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_height="wrap_content"
        android:onClick="cancel"
        android:text="Purchase"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="369dp"
        android:layout_alignBaseline="@+id/p_n_confirm_btn"
        android:layout_alignBottom="@+id/p_n_confirm_btn"
        android:layout_alignStart="@+id/p_n_phonenumber_input" />

    <!--<android.support.v7.widget.AppCompatImageButton-->
