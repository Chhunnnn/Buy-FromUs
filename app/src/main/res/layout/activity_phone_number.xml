<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhun.buyfromus.PhoneNumber">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="140dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/p_n_phonenumber_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/p_n_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/textView"
        android:text="Button"
        android:onClick="submit"/>

    <Button
        android:id="@+id/p_n_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/p_n_confirm_btn"
        android:layout_alignBottom="@+id/p_n_confirm_btn"
        android:layout_marginEnd="63dp"
        android:layout_toStartOf="@+id/p_n_confirm_btn"
        android:text="Button"
        android:onClick="cancel"/>
</RelativeLayout>
