<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhun.buyfromus.PurchaseUnit">


    <ImageView
        android:id="@+id/event_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="TextView"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/event_image"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/price_per_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        android:layout_below="@+id/Description"
        android:layout_alignStart="@+id/Description"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/price_per_unit"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/event_image"
        android:text="TextView" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_price"
        android:layout_marginTop="97dp"
        android:layout_toStartOf="@+id/total_price"
        android:text="TextView" />

    <Button
        android:id="@+id/p_u_minus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/price_per_unit"
        android:layout_below="@+id/price_per_unit"
        android:layout_marginStart="9dp"
        android:layout_marginTop="76dp"
        android:text="Button"
        android:onClick="minus"/>

    <Button
        android:id="@+id/p_u_plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/total_price"
        android:layout_alignTop="@+id/p_u_minus_btn"
        android:layout_marginStart="15dp"
        android:text="Button"
        android:onClick="plus"/>

    <Button
        android:id="@+id/p_u_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69dp"
        android:layout_toEndOf="@+id/Description"
        android:text="Button"
        android:onClick="confirm"/>
</RelativeLayout>
