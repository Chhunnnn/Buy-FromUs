<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhun.buyfromus.MainActivity">


    <ImageButton
        android:id="@+id/main_cat_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="90dp"
        android:text="Button1"
        android:onClick="goToCat1"/>

    <ImageButton
        android:id="@+id/main_cat_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/main_cat_btn1"
        android:layout_marginEnd="81dp"
        android:text="Button2" />

    <ImageButton
        android:id="@+id/main_cat_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_cat_btn1"
        android:layout_below="@+id/main_cat_btn1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="164dp"
        android:text="Button3" />

    <ImageButton
        android:id="@+id/main_cat_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_cat_btn3"
        android:layout_alignEnd="@+id/main_cat_btn2"
        android:text="Button4" />
</RelativeLayout>
