<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhun.buyfromus.MainActivity"
    android:background="#1E9907">


    <Button
        android:id="@+id/main_cat_btn1"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:onClick="goToCat1"
        android:text="SMART MEGA CONCERTS"
        tools:ignore="ContentDescription,HardcodedText"
        android:layout_alignTop="@+id/main_cat_btn2"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="102dp"
        tools:layout_editor_absoluteX="26dp" />

    <Button
        android:id="@+id/main_cat_btn2"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/main_cat_btn1"
        android:text="MOVIES"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/main_cat_btn3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_cat_btn1"
        android:text="SOCIAL EVENT"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/main_cat_btn4"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignBaseline="@+id/main_cat_btn3"
        android:layout_alignBottom="@+id/main_cat_btn3"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/main_cat_btn3"
        android:text="SMART MUSIC"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="273dp" />

    <TextView
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorPrimary"
        android:fontFamily="casual"
        android:text="BuyFromUs"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="27dp" />
</android.support.constraint.ConstraintLayout>
