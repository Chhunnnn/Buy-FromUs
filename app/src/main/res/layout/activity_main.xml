<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhun.buyfromus.MainActivity"
    android:background="#1E9907">


    <Button
        android:id="@+id/main_cat_btn1"
        android:layout_width="250dp"
        android:layout_height="81dp"
        android:onClick="goToCat1"
        android:text="SMART MEGA CONCERTS"
        tools:ignore="ContentDescription,HardcodedText"
        tools:layout_editor_absoluteY="102dp"
        tools:layout_editor_absoluteX="26dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />

    <Button
        android:id="@+id/main_cat_btn2"
        android:layout_width="250dp"
        android:layout_height="81dp"

        android:text="MOVIES"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"

        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignStart="@+id/main_cat_btn1" />

    <Button
        android:id="@+id/main_cat_btn3"
        android:layout_width="250dp"
        android:layout_height="81dp"
        android:text="SOCIAL EVENT"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/main_cat_btn4"
        android:layout_alignStart="@+id/main_cat_btn4" />

    <Button
        android:id="@+id/main_cat_btn4"
        android:layout_width="250dp"
        android:layout_height="81dp"
        android:text="SMART MUSIC"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/main_cat_btn2"
        android:layout_alignStart="@+id/main_cat_btn2" />

    <TextView
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorPrimary"
        android:fontFamily="casual"
        android:text="BuyFromUs"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        app:srcCompat="@drawable/smartmega"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        app:srcCompat="@drawable/movie"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        app:srcCompat="@drawable/smartmusic"
        android:layout_above="@+id/main_cat_btn3"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        app:srcCompat="@drawable/sport"
        android:layout_alignTop="@+id/main_cat_btn3"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_cat_btn1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/cat_pic" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="Categories"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/main_cat_btn1" />
</RelativeLayout>
